<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Intaro Pinboard{% endblock %}</title>
        <link href="{{ asset('favicon') }}" rel="icon" type="image/x-icon" />
        <link href="{{ asset('/css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('/css/application.css?2') }}" rel="stylesheet" />
    </head>
    <body>
        <div id="wrap">
            <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                    <a class="brand" href="{{ path("index") }}"><img src="{{ asset('/img/logo.png') }}" /></a>
                    {% include '_menu.html.twig' %}
                </div>
            </div>

            <div class="container">
              {% block content %}{% endblock %}
            </div>

            <div id="push"></div>
        </div>

        <footer class="footer">
          <div class="container">
            <p>Code and documentation licensed under the MIT license.</p>
          </div>
        </footer>

        {% block javascripts %}
        <script src="{{ asset('/js/jquery-1.9.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('/js/micro_tpl.js') }}" type="text/javascript"></script>
        <script src="{{ asset('/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>