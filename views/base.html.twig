<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}XHProf.me ::{% endblock %}</title>
        <link href="{{ asset('favicon') }}" rel="icon" type="image/x-icon" />
        <link href="{{ asset('/css/bootstrap.min.css') }}" rel="stylesheet" />
        {% block head_css %}{% endblock %}
        <link href="{{ asset('/css/application.css') }}" rel="stylesheet" />
    </head>
    <body>
    <header id="header">
        <div id="logo-group">
				<span id="logo">
					<img src="{{ asset('/img/logo-64.png') }}" alt="SmartAdmin">
					XHProf.ME
				</span>
        </div>

        <ol class="breadcrumb">
            {% block broadcarms %}
                <li><a href="{{ path('index') }}">Home #</a></li>
            {% endblock %}
        </ol>
        <div class="pull-right">
            <div id="hide-menu" class="btn-header pull-right">
					<span>
						<a href="javascript:void(0);"><i class="fa fa-reorder"></i></a>
					</span>
            </div>
            <div id="logout" class="btn-header transparent pull-right">
					<span>
						<a href="login.html"><i class="fa fa-sign-out"></i></a>
					</span>
            </div>
            <div id="search-mobile" class="btn-header transparent pull-right">
					<span>
						<a href="javascript:void(0)"><i class="fa fa-search"></i></a>
					</span>
            </div>

            <form action="index.html#ajax/search.html" class="header-search pull-right">
                <input type="text" placeholder="Find reports and more" id="search-fld" data-cip-id="search-fld">
                <button type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="javascript:void(0);" id="cancel-search-js"><i class="fa fa-times"></i></a>
            </form>

        </div>
    </header>
    <main>
        <nav>

            <ul>
                <li>sdsd</li>
                <li>sdsd</li>
            </ul>
        </nav>
        <article>
            {% block content %}{% endblock %}
        </article>
    </main>
    <footer>footer</footer>

        {% block javascripts %}
        <script src="{{ asset('/js/jquery-1.9.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('/js/moment.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>